<div class="maghrib-box">
صلاة المغرب بعد:
<span id="count"></span>
</div>

<script>

/* تحديث الساعة */

function updateClock(){

let now=new Date();

let h=now.getHours()%12;
let m=now.getMinutes();
let s=now.getSeconds();

let hDeg=(h*30)+(m/2);
let mDeg=m*6;
let sDeg=s*6;

document.getElementById("h").style.transform=
"rotate("+hDeg+"deg)";

document.getElementById("m").style.transform=
"rotate("+mDeg+"deg)";

document.getElementById("s").style.transform=
"rotate("+sDeg+"deg)";
}

/* مثال توقيت المغرب (عدله يومياً أو سنربطه لاحقاً بمواقيت حقيقية) */

let maghribHour=18;
let maghribMinute=45;

/* العد التنازلي */

function updateCountdown(){

let now=new Date();

let target=new Date();

target.setHours(maghribHour);
target.setMinutes(maghribMinute);
target.setSeconds(0);

if(now>target) target.setDate(target.getDate()+1);

let diff=target-now;

let h=Math.floor(diff/1000/60/60);
let m=Math.floor(diff/1000/60)%60;
let s=Math.floor(diff/1000)%60;

document.getElementById("count").innerHTML=
h+"س "+m+"د "+s+"ث";
}

setInterval(()=>{
updateClock();
updateCountdown();
},1000);

</script>

